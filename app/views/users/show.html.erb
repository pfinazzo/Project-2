<h1><%= @user.name %></h1>
<% if @user.teacher then %>
<p>Teacher</p>
<% else %>
<p>Student</p>
<% end %>
<%= image_tag @user.image, class: "pic" %>
<br>
<%= @user.content %>
<br>
<%= "Email me at #{@user.email} "%>
<br>

<% if @user.teacher == true then %>
<%= link_to "Booked Lessons!", lessons_path %>
<% else %>
<%= link_to "Available lessons!", lessons_path %>
<% end %>





